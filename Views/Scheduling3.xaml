<UserControl x:Class="ExamWatches.Views.Scheduling3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamWatches.Views"
        mc:Ignorable="d"
       Height="auto" Width="auto" d:DesignHeight="400" d:DesignWidth="600"
             FlowDirection="RightToLeft">
    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="عدد الفترات الافتراضية" Grid.Row="0" Grid.Column="0"/>
            <Label Content="مدة الفترة الافتراضية" Grid.Row="1" Grid.Column="0"/>
            <Label Content="وقت البدء الافتراضي" Grid.Row="2" Grid.Column="0"/>

            <TextBox x:Name="DefaultPeriodsNumber" Grid.Row="0" Grid.Column="1"/>
            <TextBox x:Name="DefaultDuration"  Grid.Row="1" Grid.Column="1"/>
            <TextBox x:Name="DefaultStartTime"  Grid.Row="2" Grid.Column="1"/>
            
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock>تحديد أيام الامتحان</TextBlock>
            <Calendar CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle1}" x:Name="ExamDays" SelectionMode="MultipleRange" />
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1">

            <DataGrid x:Name="Periods" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="اليوم" Width="*"/>
                    <DataGridComboBoxColumn Header="عدد الفترات" Width="*">
                        
                    </DataGridComboBoxColumn>
                    <DataGridTextColumn Header="مدة الفترة" Width="1.5*"/>
                    <DataGridTextColumn Header="وقت البدء" Width="1.5*"/>
                   
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" Content="بدء التوزيع" Style="{StaticResource RoundButton}"/>
        <!--<StackPanel Grid.Column="3" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button x:Name="Previous" Content="السابق" Click="Previous_Click" />
            <Button x:Name="Next" Content="التالي" Click="Next_Click" />
        </StackPanel>-->
    </Grid>
</UserControl>
