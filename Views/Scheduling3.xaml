<UserControl x:Class="ExamWatches.Views.Scheduling3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamWatches.Views"
        mc:Ignorable="d"
       Height="auto" Width="auto" d:DesignHeight="400" d:DesignWidth="600"
             FlowDirection="RightToLeft">
    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock>تحديد أيام الامتحان</TextBlock>
            <Calendar CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle1}" x:Name="ExamDays" SelectionMode="MultipleRange" SelectedDatesChanged="ExamDays_SelectedDatesChanged" />
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel  Orientation="Horizontal">
                <Label Grid.Row="1" Grid.Column="1" Content="عدد الفترات: "/>
                <TextBox Text="2" Width="150" Height="20" VerticalAlignment="Top"></TextBox>
                <Button x:Name="apply" Content="تطبيق"></Button>

            </StackPanel>
            <DataGrid x:Name="Periods" HorizontalAlignment="Stretch" CanUserAddRows="False" Height="auto" AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="اليوم " Width="*" Binding="{Binding day}" />
                    <!--<DataGridComboBoxColumn Header="عدد الفترات الامتحانية   " Width="1.8*" SelectedItemBinding="{Binding }" />-->

                    <DataGridTemplateColumn Header="عدد الفترات الامتحانية">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox SelectedIndex="0" ItemsSource="{Binding periodListItem}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="وقت بدء الفترة " Width="1.3*" Binding="{Binding timeItem}"/>
                    <DataGridTextColumn  Header="مدة الفترة" Width="1.5*" Binding="{Binding periodItem}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>


    </Grid>
</UserControl>
