<Window x:Class="ExamWatches.Views.MainUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamWatches.Views"
        mc:Ignorable="d"
        Title="MainUI" Height="450" Width="800" FlowDirection="RightToLeft">
    <Grid>
        <ToolBar Margin="350,167,70,175"/>
        <TabControl>
            <TabItem Header="التهيئة">
                <Grid Background="#FFE5E5E5">
                    <TabControl TabStripPlacement="Left" Grid.ColumnSpan="3">
                        <TabItem Header="الامتحان">
                            <Grid Background="#FFE5E5E5">
                                <local:ExamInit/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="القاعات">
                            <Grid Background="#FFE5E5E5">
                                <local:RoomsInit/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="المراقبين">
                            <Grid Background="#FFE5E5E5">
                                <local:WatchersInit/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="توزيع المراقبات">

                <Grid Background="#FFE5E5E5">
                    <local:Scheduling1/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
