    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="التهيئة">
                <Grid Background="#FFE5E5E5">
                    <TabControl TabStripPlacement="Left" Grid.ColumnSpan="3">
                        <TabItem Header="الامتحان">
                            <Grid Background="#FFE5E5E5">
                                <views:ExamInit/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="القاعات">
                            <Grid Background="#FFE5E5E5">
                                <views:RoomsInit/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="المراقبين">
                            <Grid Background="#FFE5E5E5">
                                <views:WatchersInit/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="توزيع المراقبات" x:Name="SchedulingTab">
     
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="1" x:Name="ShowScheduling1" Click="ShowScheduling1_Click"/>
                        <Button Content="2" x:Name="ShowScheduling2" Click="ShowScheduling2_Click"/>
                        <Button Content="3" x:Name="ShowScheduling3" Click="ShowScheduling3_Click"/>
                        <Button Content="4" x:Name="ShowSchedulingFinal" Click="ShowSchedulingFinal_Click"/>
                        <Button Content="5" x:Name="ShowWatcherScheduling" Click="ShowWatcherScheduling_Click"/>
                    </StackPanel>
                    <ContentControl Grid.Row="1" Grid.Column="0" Content="{Binding}"/>
                </Grid>
            </TabItem>
         
        </TabControl>
        <StatusBar Grid.Row="1" Height="auto">
            <StatusBarItem x:Name="UserName"/>
            <Separator/>
            <StatusBarItem>
                <Hyperlink x:Name="ChangeUser" Click="ChangeUser_Click">تبديل المستخدم</Hyperlink>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
